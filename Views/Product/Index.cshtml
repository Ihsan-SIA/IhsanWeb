@{
    ViewData["Title"] = "List of products";
}
@model List<IhsanWeb.ViewModel.ProductViewModel>

<h4>@ViewData["Title"]</h4>
<a asp-action="Create" class="btn btn-primary">Create new product</a>
<a asp-action="Update" class="btn btn-primary">Update existing product</a>
<hr>

@if (Model.Count>0)
{
    <table class="table table-success">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>Action</th>
            </tr>
        </thead>

        @foreach (var product in Model)
        {
            <tbody>
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td><a class="btn btn-link" asp-action="Detail" asp-route-id="@product.Id">Detail</a></td>
                    <td>
                        <a asp-action="Update" class="btn btn-primary">Update</a>
                        <a asp-action="Delete" class="btn btn-primary">Delete</a>
                    </td>
                </tr>
            </tbody>
        }
    </table>
}
else{
    <h5>Sorry, there are no products on this page yet.</h5>
}