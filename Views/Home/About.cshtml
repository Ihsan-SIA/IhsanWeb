@{
    ViewData["Title"] = "About page";
}
@model IhsanWeb.ViewModel.ProductDetailViewModel

<link rel="stylesheet" href="~/css/site.css" />
<main class="about">
    <h1>Name: @Model.Name</h1>
    <p>Description: @Model.Description</p>
    <p>Use this page to detail your site's privacy policy.</p>
    @if (@Model.Id > 5)
    {
        <p>There are over 5 products registered on this page.</p>
    }
    <a href='https://postimages.org/' target='_blank'><img src='https://i.postimg.cc/HkhrXH4Z/android-phones.jpg' border='0' alt='android-phones' /></a>
</main>